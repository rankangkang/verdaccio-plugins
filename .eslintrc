{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": ["@verdaccio", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "import/order": 0,
    "prettier/prettier": 2,
    "no-unused-vars": "off",
    "prefer-const": 0,
    "space-before-function-paren": "off",
    "no-undef": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline"
      }
    ]
  }
}

